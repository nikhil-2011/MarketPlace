@model IEnumerable<MarketPlaceMVC.Models.Cart>

@{
    ViewBag.Title = "MyCart";
}
<script>
        history.pushState(null, null, document.title);
        window.addEventListener('popstate', function () {
            history.pushState(null, null, document.title);
        });
</script>
<h2>My Cart</h2>
<p style="font-size:medium">
    @Html.ActionLink("Home","LoginPage")
</p>
<p>
    @ViewBag.error.ToString()
</p>
<table class="table">
    <tr>

        <th>
            @Html.DisplayName("Item ID")
        </th>

        <th>
            @Html.DisplayName("Name")
        </th>
        <th>
            @Html.DisplayName("Quantity")
        </th>
        <th>
            @Html.DisplayName("Price")
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.itemid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.itemname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.price)
            </td>
            <td>


                @Html.ActionLink("Delete", "DeleteFromCart", item)
            </td>
        </tr>

    }
</table>

@if (@ViewBag.status==1) {


    <table>
        <tr style="font-size:medium">
            <td width="950px"></td>
            <td>@Html.ActionLink("Place Order", "PlaceOrder")</td>
        </tr>

    </table>
        }
